CREATE TABLE RECETA(
    ID TEXT NOT NULL PRIMARY KEY,
    NOMBRE TEXT NOT NULL,
    CATEGORIA TEXT NOT NULL,
    INSTRUCCION TEXT NOT NULL,
    IMAGEN TEXT NOT NULL,
    VIDEO TEXT NOT NULL,
    INGREDIENTES TEXT NOT NULL
);

insertar:
INSERT OR REPLACE INTO RECETA( ID,NOMBRE,CATEGORIA,INSTRUCCION,IMAGEN,VIDEO,INGREDIENTES)
VALUES (?,?,?,?,?,?,?);

obtener:
SELECT * FROM RECETA;

eliminar:
DELETE FROM RECETA WHERE ID = ?;